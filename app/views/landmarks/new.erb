<h2>Create New Landmark</h2>

<!-- add content here -->
<form action="/landmarks" method="POST">
<label for="landmark_name">Landmark Name:</label>
<input type="text" name="landmark[name]" id="landmark_name"/><br>
<label for="landmark_year_completed">Landmark Year Completed:</label>
<input typ="text" name="landmark[year_completed]" id="landmark_year_completed"/><br>
<p><strong>Existing Figures:</strong><p>
<%@figures.each do |figure|%>
  <input type="radio" id="figure_<%=figure.id%>"name="landmark[figure_id]"value="<%=figure.id%>"><%=figure.name%></input><br>
<%end%><br><br>
<label for="new_figure">New Figure:</label>
<input type="text" name="figure[name]" id="new_figure"/><br>
<input type="submit" value="Create New Landmark" id="submit"/>
</form>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
